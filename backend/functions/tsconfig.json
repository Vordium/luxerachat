{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "rootDir": "./src" // Ensure this points to the correct directory
  },
  "include": ["src/**/*.ts"], // Include only TypeScript files
  "exclude": ["node_modules", "lib", "src/**/*.js"] // Exclude JavaScript files
}
